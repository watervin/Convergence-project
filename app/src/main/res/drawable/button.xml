<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 평상시 --> <item android:state_pressed="false">
    <shape>
        <padding android:bottom="2.5dp" android:left="2.5dp" android:right="2.5dp" android:top="2.5dp" /> <solid android:color="#D2B48C" />
    <!-- 테두리 --> <stroke android:width="1dp" android:color="#DEB887" /><corners android:bottomLeftRadius="80dp" android:bottomRightRadius="80dp" android:topLeftRadius="80dp" android:topRightRadius="80dp" /> </shape> </item>



    <!-- 클릭했을 때 -->
    <item android:state_pressed="true">
        <shape> <!-- 배경 --> <solid android:color="#C0C0C0" />
    <!-- 테두리 --> <stroke android:width="1dp" android:color="#DEB887" />
    <!-- 코너 둥근 정도 --> <corners android:bottomLeftRadius="80dp" android:bottomRightRadius="80dp" android:topLeftRadius="80dp" android:topRightRadius="80dp" /> </shape>
</item>
</selector>